[core]
	excludesfile = ~/.gitignore
[user]
	email = mnin@mnin.de
	name = Martin Wilhelmi
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	br = branch
	st = status
	ci = commit
	co = checkout
	lg = log --stat --summary
[merge]
	summary = true
